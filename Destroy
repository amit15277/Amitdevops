pipeline {
    agent any

    options {
        ansiColor('xterm')
    }

    stages {

        stage ('AWS infra pre-requisite deployment') {
            steps {
                sh "ansible-playbook ./ansible/playbooks/tf_backend_setup.yml"
            }
        }

        

        stage ('TF Initialize') {
            steps {
                sh "terraform init -input=false"
            }
        }

        
        stage ('destroy') {
            
            steps {
                sh "terraform destroy -auto-approve"
            }
        }
    }
}